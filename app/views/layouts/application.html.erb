<!DOCTYPE html>
<html>
<head>
  <title>Workspace</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag "https://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.3/normalize.css" %>
  <%= stylesheet_link_tag "https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css" %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <header>
        <div class="wrapper clearfix">
            <div id="logo">
                <%= link_to "Muse", root_path %>
            </div>
            <nav>
                <% if user_signed_in? %>
                   <%= link_to current_user.name, edit_user_registration_path %>
                   <%= link_to "Add New Inspiration", new_post_path, class: "button" %>
                    <%= link_to "Log Out", destroy_user_session_path, method: :delete %>
                <% else %>
                   <%= link_to "Log In", new_user_session_path %>
                   <%= link_to "Register", new_user_registration_path, class: "button" %>
                  
                <% end %>
            </nav>
        </div>
    </header>
       <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>

<div class="wrapper">
    <%= yield %>
</div>

</body>
</html>
